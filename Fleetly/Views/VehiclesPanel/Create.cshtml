@using Fleetly.Models.Dtos
@model CreateVehicleDto

<h2>Dodaj Samochód</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Marka</label>
        <input asp-for="Make" class="form-control" />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rejestracja</label>
        <input asp-for="Registration" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rok produkcji</label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Photo" class="form-label">Zdjęcie</label>
        <input type="file" name="Photo" class="form-control" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-success mt-2">Dodaj</button>
</form>
