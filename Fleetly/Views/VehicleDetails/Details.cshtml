@using Fleetly.Models.ViewModels
@model VehicleDetailsViewModel
@{
    ViewBag.Title = "Vehicle Details";
}
<div class="container mt-4">
    <h2 class="mb-4">Vehicle Details</h2>
    <div class="card mb-5">
        <div class="card-body">
            <form asp-action="UpdateVehicle" method="post" class="row g-3">
                <input type="hidden" name="id" value="@Model.Vehicle.Id" />
                <div class="col-md-4">
                    <label for="Make" class="form-label">Make</label>
                    <input asp-for="Vehicle.Make" class="form-control" id="Make" />
                </div>
                <div class="col-md-4">
                    <label for="Model" class="form-label">Model</label>
                    <input asp-for="Vehicle.Model" class="form-control" id="Model" />
                </div>
                <div class="col-md-4">
                    <label for="Year" class="form-label">Year</label>
                    <input asp-for="Vehicle.Year" type="number" class="form-control" id="Year" />
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">Save Vehicle</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mb-5">
        <h3>Routes</h3>
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width: 65%">Addresses</th>
                    <th style="width: 35%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var route in Model.Routes)
                {
                    <tr>
                        <td>
                            <table class="table table-sm table-bordered mb-2">
                                <thead class="table-light">
                                    <tr>
                                        <th>Street</th>
                                        <th>City</th>
                                        <th>Postal Code</th>
                                        <th>Country</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < route.Addresses.Count; i++)
                                    {
                                        var addr = route.Addresses[i];
                                        <tr>
                                            <td>@addr.Street</td>
                                            <td>@addr.City</td>
                                            <td>@addr.PostalCode</td>
                                            <td>@addr.Country</td>
                                            <td class="text-center">
                                                <form asp-action="EditAddress" method="post" class="d-inline">
                                                    <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                                    <input type="hidden" name="routeId" value="@route.Id" />
                                                    <input type="hidden" name="index" value="@i" />
                                                    <button type="submit" class="btn btn-sm btn-warning">Edit</button>
                                                </form>
                                                <form asp-action="MoveAddressUp" method="post" class="d-inline">
                                                    <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                                    <input type="hidden" name="routeId" value="@route.Id" />
                                                    <input type="hidden" name="index" value="@i" />
                                                    <button type="submit" class="btn btn-sm btn-secondary">↑</button>
                                                </form>
                                                <form asp-action="MoveAddressDown" method="post" class="d-inline">
                                                    <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                                    <input type="hidden" name="routeId" value="@route.Id" />
                                                    <input type="hidden" name="index" value="@i" />
                                                    <button type="submit" class="btn btn-sm btn-secondary">↓</button>
                                                </form>
                                                <form asp-action="DeleteAddress" method="post" class="d-inline">
                                                    <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                                    <input type="hidden" name="routeId" value="@route.Id" />
                                                    <input type="hidden" name="index" value="@i" />
                                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <form asp-action="AddAddress" method="post" class="row g-2">
                                <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                <input type="hidden" name="routeId" value="@route.Id" />
                                <div class="col-md-3">
                                    <input name="address.Street" placeholder="Street" class="form-control form-control-sm" />
                                </div>
                                <div class="col-md-2">
                                    <input name="address.City" placeholder="City" class="form-control form-control-sm" />
                                </div>
                                <div class="col-md-2">
                                    <input name="address.PostalCode" placeholder="Postal Code" class="form-control form-control-sm" />
                                </div>
                                <div class="col-md-3">
                                    <input name="address.Country" placeholder="Country" class="form-control form-control-sm" />
                                </div>
                                <div class="col-md-2 text-end">
                                    <button type="submit" class="btn btn-sm btn-success">Add Address</button>
                                </div>
                            </form>
                        </td>
                        <td class="text-center">
                            <form asp-action="DeleteRoute" method="post">
                                <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                <input type="hidden" name="routeId" value="@route.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete Route</button>
                            </form>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="2" class="text-end">
                        <form asp-action="AddRoute" method="post">
                            <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                            <button type="submit" class="btn btn-sm btn-primary">Add New Route</button>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div>
        <h3>Inspections</h3>
        <table class="table table-hover">
            <thead class="table-secondary">
                <tr>
                    <th style="width: 15%">Date</th>
                    <th style="width: 10%">Passed</th>
                    <th style="width: 15%">Valid Until</th>
                    <th style="width: 40%">Comments</th>
                    <th style="width: 20%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var insp in Model.Inspections)
                {
                    <tr>
                        <td>@insp.DatePerformed.ToShortDateString()</td>
                        <td>
                            <span class="badge @(insp.IsPassed ? "bg-success" : "bg-danger")">
                                @(insp.IsPassed ? "Yes" : "No")
                            </span>
                        </td>
                        <td>@insp.ValidUntil.ToShortDateString()</td>
                        <td>
                            <ul class="list-unstyled mb-2">
                                @for (int i = 0; i < insp.Comments.Count; i++)
                                {
                                    var c = insp.Comments[i];
                                    <li>
                                        <small class="text-muted">@c.Timestamp.ToShortDateString():</small> @c.Text
                                        <form asp-action="EditComment" method="post" class="d-inline ms-2">
                                            <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                            <input type="hidden" name="inspectionId" value="@insp.Id" />
                                            <input type="hidden" name="commentIndex" value="@i" />
                                            <button type="submit" class="btn btn-sm btn-warning btn-sm">Edit</button>
                                        </form>
                                        <form asp-action="DeleteComment" method="post" class="d-inline">
                                            <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                            <input type="hidden" name="inspectionId" value="@insp.Id" />
                                            <input type="hidden" name="commentIndex" value="@i" />
                                            <button type="submit" class="btn btn-sm btn-danger btn-sm">Delete</button>
                                        </form>
                                    </li>
                                }
                            </ul>
                            <form asp-action="AddComment" method="post" class="d-flex gap-2">
                                <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                <input type="hidden" name="inspectionId" value="@insp.Id" />
                                <input name="comment.Text" placeholder="Comment" class="form-control form-control-sm" />
                                <button type="submit" class="btn btn-sm btn-outline-primary">Add</button>
                            </form>
                        </td>
                        <td>
                            <form asp-action="EditInspection" method="post" class="mb-1">
                                <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                <input type="hidden" name="inspectionId" value="@insp.Id" />
                                <button type="submit" class="btn btn-sm btn-warning">Edit</button>
                            </form>
                            <form asp-action="DeleteInspection" method="post">
                                <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                                <input type="hidden" name="inspectionId" value="@insp.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="5">
                        <form asp-action="AddInspection" method="post" class="row g-2 align-items-end">
                            <input type="hidden" name="vehicleId" value="@Model.Vehicle.Id" />
                            <div class="col-md-3">
                                <label class="form-label">Date</label>
                                <input name="inspection.DatePerformed" type="date" class="form-control form-control-sm" required />
                            </div>
                            <div class="col-md-2">
                                <div class="form-check mt-4">
                                    <input name="inspection.IsPassed" class="form-check-input" type="checkbox" id="passedCheck" />
                                    <label class="form-check-label small" for="passedCheck">Passed?</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Valid Until</label>
                                <input name="inspection.ValidUntil" type="date" class="form-control form-control-sm" required />
                            </div>
                            <div class="col-md-4 text-end">
                                <button type="submit" class="btn btn-sm btn-success">Add Inspection</button>
                            </div>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
